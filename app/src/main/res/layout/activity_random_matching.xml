<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RandomMatchingActivity">


    <ImageView
        android:id="@+id/random_match_profile_image"
        android:layout_width="@dimen/profileImageDp"
        android:layout_height="@dimen/profileImageDp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/regular_marginTop"
        app:srcCompat="@drawable/dumbell_human" />

    <TextView
        android:id="@+id/random_match_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onedp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/random_match_profile_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="@dimen/regular_textSize" />

    <TextView
        android:id="@+id/random_match_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onedp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/random_match_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="@dimen/regular_textSize" />

    <TextView
        android:id="@+id/random_match_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Location" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onedp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/random_match_profile_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="@dimen/regular_textSize" />

    <TextView
        android:id="@+id/random_match_gym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Gym" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onedp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/random_match_profile_gym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="@dimen/regular_textSize" />

    <Button
        android:id="@+id/random_match_profile_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_marginTop"
        android:text="@string/Yes" />

    <Button
        android:id="@+id/random_match_profile_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/No" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blush_pinkSecondary"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>
</LinearLayout>